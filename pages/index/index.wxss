.header-wrapper {
    background: #417dc9;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10rpx 26rpx;
}

.header-search {
    background: #7aa4d9;
    height: 36rpx;
    border-radius: 36rpx;
    padding: 16rpx 30rpx;
    width: 750rpx;
    display: flex;
    align-items: center;
    align-content: center;
    justify-content: space-between;
}

.search-wrapper {
    display: flex;
    align-content: center;
}

.searh-image {
    width: 40rpx;
}

.search-text {
    color: #fff;
    font-size: 24rpx;
    margin-left: 10rpx;
    margin-top: 4rpx;
}

.scanning {
    width: 40rpx;
    height: 40rpx;
    margin-top: 8rpx;
    border-left: 1px solid #fff;
    padding-left: 28rpx;
}

.slide-image {
    width: 750rpx;
}

.me-middle {
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-wrap: nowrap;
    padding: 40rpx 0;
}

.ad-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.middle-topic {
    width: 73rpx;
}

.middle-text {
    color: #333;
    font-size: 24rpx;
    margin-top: 20rpx;
}

/* 导航样式 */

.swiper-tab {
    width: 100%;
    border: 1px solid #f1f1f1;
    border-left:0;
    border-right: 0;
    box-shadow: 0px 2px 6px 1px #f5f5f5;
    text-align: center;
    height:80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    display:flex;
    justify-content: space-between;
    flex-wrap: nowrap;
}

.swiper-tab-list {
    font-size: 30rpx;
    display: inline-block;
    color: #666;
    padding:0 30rpx;
}

.on {
    color: #417dc9;
    border-bottom: 4rpx solid #417dc9;
}

.swiper-box {
    display: block;
    width: 100%;
    overflow: hidden;
}

.swiper-box view {
    text-align: center;
}
