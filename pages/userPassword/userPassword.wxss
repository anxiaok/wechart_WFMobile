.form-wrapper{
    padding:20rpx;
}
.section {
    border-bottom: 1px solid #f1f1f1;
    display: flex;
    align-items: center;
    height: 80rpx;
}

.mobile-input,.password-input,.code-input{
    font-size: 24rpx;
    width: 100%;
}
.eye-image{
    width:50rpx;
    height:50rpx;
}
.verCode{
    width:200rpx;
    height:60rpx;
    background: #f00;
}
button{
    width:100%;
    height:60rpx;
    line-height: 60rpx;
    color:#fff;
    background: #417dc9;
    font-size:24rpx;
    margin-top:50rpx;
}
.find-password{
    text-decoration:underline;
    font-size:24rpx;
    color:#417dc9;
    margin-top:40rpx;
}
.three-title-wrapper{
    text-align: center;
    position:relative;
}
.three-title-wrapper:before{
    content:'';
    display: block;
    width:100%;
    height:40rpx;
    line-height: 40rpx;
    border-top:1px solid #f1f1f1;
    position:absolute;
    top:30rpx;
}
.three-title{
    color:#333;
    font-size:24rpx;
    font-weight: bold;
    text-align: center;
    display: inline-block;
    background:#fff;
    padding:0 50rpx;
    position:relative;
    z-index: 1;
}
.image-wrapper{
    display: flex;
    justify-content: center;
    align-items: center;
}
.three-image{
    width:80rpx;
    height:200rpx;
    margin:0 40rpx;
}