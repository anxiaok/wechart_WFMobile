page{
    background-color:#f1f1f1;
}
.header-wrapper {
    background: #417dc9;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10rpx 26rpx;
}

.header-search {
    background: #7aa4d9;
    height: 36rpx;
    border-radius: 36rpx;
    padding: 16rpx 30rpx;
    width: 750rpx;
    display: flex;
    align-items: center;
    align-content: center;
    justify-content: space-between;
}

.search-wrapper {
    width:100%;
    display: flex;
    align-content: center;
    align-items: center;
}

.searh-image {
    width: 40rpx;
}

.search-text {
    color: #fff;
    font-size: 24rpx;
    margin-left: 10rpx;
    width: 100%;
}

.hot-word-wrapper ,.history-wrapper{
    padding: 10rpx 20rpx 0;
    background-color:#fff;
}

.hot-title {
    font-size: 29rpx;
    color: #333;
    font-weight: bold;
}

.crown {
    width: 25rpx;
}

.hot-lists {
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    margin-top:18rpx;
}

.hot-words {
    border-top: 1px solid #f1f1f1;
    width: 50%;
    height: 70rpx;
    line-height: 60rpx;
    position:relative;
}
.crown{
    position:absolute;
    left:0;
    top:24rpx;
}
.words-text {
    color: #666;
    font-size: 25rpx;
    padding-left:40rpx;
    border-left:1px solid #f1f1f1;
}
.hot-words:nth-child(odd) .words-text{
    border-left:0;
}
.history-wrapper{
    margin-top:20rpx;
}
.history-lists{
    margin-top:18rpx;
}
.history-words{
    border-top: 1px solid #f1f1f1;
}
.history-text{
    color:#666;
    font-size:25rpx;
    height:70rpx;
    line-height: 70rpx;
}
.close-words{
    color:#ccc;
    float:right;
    font-size:50rpx;
}
.close-wrapper{
    display: flex;
    justify-content: center;
    align-items: center;
    color:#999;
    font-size:25rpx;
    border-top:1px solid #f1f1f1;
    padding:20rpx;
}
.close-image{
    width:40rpx;
    margin-right:10rpx;
}